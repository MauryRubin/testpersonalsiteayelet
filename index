            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        a {
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #aaaaaa;
        }

        /* --- 2. NAVIGATION --- */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 2rem 4rem;
            position: fixed;
            width: 100%;
            top: 0;
            background-color: rgba(0, 0, 0, 0.95); /* High opacity black */
            z-index: 1000;
            border-bottom: 1px solid #222;
        }

        .logo {
            font-family: 'Libre Baskerville', serif; /* Requested Font */
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 2rem;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Hamburger Icon (Hidden on Desktop) */
        .hamburger {
            display: none;
            cursor: pointer;
            flex-direction: column;
            gap: 6px;
            z-index: 1002;
        }

        .bar {
            width: 25px;
            height: 2px;
            background-color: white;
            transition: 0.3s;
        }

        /* Hamburger Animation when Active */
        .hamburger.active .bar:nth-child(1) {
            transform: rotate(45deg) translate(5px, 6px);
        }
        .hamburger.active .bar:nth-child(2) {
            opacity: 0;
        }
        .hamburger.active .bar:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -6px);
        }

        /* --- 3. PORTFOLIO GRID --- */
        .container {
            margin-top: 100px; /* Space for fixed header */
            padding: 20px 40px;
            max-width: 100%;
        }

        .portfolio-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr); /* 4 Columns */
            gap: 20px;
        }

        .portfolio-item {
            position: relative;
            width: 100%;
            padding-bottom: 135%; /* Aspect ratio for portrait images */
            overflow: hidden;
            background-color: #111;
            cursor: pointer;
            
            /* Scroll Animation Initial State */
            opacity: 0;
            transform: translateY(60px);
            transition: opacity 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94), 
                        transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        /* Class added by JS for scroll reveal */
        .portfolio-item.reveal {
            opacity: 1;
            transform: translateY(0);
        }

        .portfolio-item img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
            filter: grayscale(20%);
        }

        /* --- 4. HOVER OVERLAY (CREDITS) --- */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6); /* Dark overlay */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            opacity: 0;
            transition: opacity 0.4s ease;
            padding: 20px;
            backdrop-filter: blur(2px); /* Slight blur on the image behind text */
        }

        .portfolio-item:hover .overlay {
            opacity: 1;
        }

        .portfolio-item:hover img {
            transform: scale(1.05); /* Subtle zoom on hover */
            filter: grayscale(0%);
        }

        .credit-name {
            font-family: 'Libre Baskerville', serif;
            font-size: 1.2rem;
            margin-bottom: 8px;
            transform: translateY(10px);
            transition: transform 0.4s ease;
        }

        .credit-role {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #dddddd;
            transform: translateY(10px);
            transition: transform 0.4s ease 0.1s; /* Slight delay */
        }

        .portfolio-item:hover .credit-name,
        .portfolio-item:hover .credit-role {
            transform: translateY(0);
        }

        /* --- 5. MOBILE RESPONSIVENESS --- */
        @media (max-width: 1024px) {
            .portfolio-grid {
                grid-template-columns: repeat(2, 1fr); /* 2 columns on tablet */
            }
