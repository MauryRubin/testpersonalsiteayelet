<body>

    <!-- NAVIGATION -->
    <nav>
        <div class="logo"><a href="#">Ayelet Joelle</a></div>
        
        <ul class="nav-links">
            <li><a href="#work">Work</a></li>
            <li><a href="#styling">Personal Styling</a></li>
            <li><a href="#about">About</a></li>
        </ul>

        <div class="hamburger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>

    <!-- PORTFOLIO GRID -->
    <div class="container" id="work">
        <div class="portfolio-grid" id="grid">
            <!-- Items will be injected here by JavaScript -->
        </div>
    </div>

    <!-- FOOTER (Optional simple footer) -->
    <footer style="text-align: center; padding: 4rem 2rem; color: #555; font-size: 0.8rem;">
        &copy; 2024 Ayelet Joelle. All Rights Reserved.
    </footer>

    <script>
        // --- 1. GENERATE 40 PORTFOLIO ITEMS ---
        const gridContainer = document.getElementById('grid');
        
        // I will generate 40 items using a loop to keep the HTML clean
        for (let i = 1; i <= 40; i++) {
            const item = document.createElement('div');
            item.classList.add('portfolio-item');
            
            // Using placeholder images (randomized via ID so they look different)
            // Using unsplash source for high quality fashion-y placeholders
            const imgUrl = `https://images.unsplash.com/photo-${getPhotoId(i)}?auto=format&fit=crop&w=600&q=80`;

            item.innerHTML = `
                <img src="${imgUrl}" alt="Portfolio Image ${i}" loading="lazy">
                <div class="overlay">
                    <div class="credit-name">Ayelet Joelle</div>
                    <div class="credit-role">Stylist & Creative Direction</div>
                </div>
            `;
            
            gridContainer.appendChild(item);
        }

        // Helper function to return some reliable Unsplash IDs for portrait fashion/art style
        function getPhotoId(index) {
            const ids = [
                "1534528741775-53994a69daeb", "1515886657613-9f3515b0c78f", "1494790108377-be9c29b29330",
                "1529139574466-a302d20525b5", "1503342394128-c104d54dba01", "1532453288672-3a27e9be9efd",
                "1500917293891-ef795e70e1f6", "1483985988355-763728e1935b", "1512353087831-50e745091a02",
                "1531746020798-e6953c6e8e04", "1506644555661-c1e1c0e01098", "1502323777036-f29e3972d82f",
                "1492633426602-9615b49242b7", "1517841905240-472988babdf9", "1524504388940-b1c1722653e1",
                "1504194952298-4d639a48e727", "1485230984865-1c888c38558e", "1512413914633-b514302e2399",
                "1496747611176-849101f087f1", "1540221652-3283995f36e3"
            ];
            // Cycle through IDs if we go over the list length
            return ids[index % ids.length];
        }

        // --- 2. HAMBURGER MENU TOGGLE ---
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        const links = document.querySelectorAll('.nav-links li');

        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.classList.toggle('active');
        });

        // Close menu when a link is clicked
        links.forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                hamburger.classList.remove('active');
            });
        });

        // --- 3. SCROLL REVEAL ANIMATION ---
        // We use Intersection Observer to detect when images enter the viewport
        const observerOptions = {
            threshold: 0.1, // Trigger when 10% of the item is visible
            rootMargin: "0px 0px -50px 0px" // Offset slightly so it triggers before bottom
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    // Add a tiny delay based on column position for a "wave" effect if multiple load at once
                    setTimeout(() => {
                        entry.target.classList.add('reveal');
                    }, 50); 
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Target all portfolio items we just created
        const items = document.querySelectorAll('.portfolio-item');
        items.forEach(item => {
            observer.observe(item);
        });
    </script>
</body>
</html>
